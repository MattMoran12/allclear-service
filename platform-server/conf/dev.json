{
  "env": "dev",

  "trans": {
    "driverClass": "com.mysql.jdbc.Driver",
    "user": "${trans.user:-allclear}",
    "password": "${trans.password:-allclearpwd}",
    "url": "jdbc:mysql://allcleardb-dev.mysql.database.azure.com:3306/allclear?useEncoding=true&characterEncoding=UTF-8&prepStmtCacheSize=100&prepStmtCacheSqlLimit=1024&serverTimezone=UTC&useSSL=true&requireSSL=true",
    "maxWaitForConnection": "1s",
    "validationQuery": "SELECT 1",
    "validationQueryTimeout": "10s",
    "minSize": "5",
    "maxSize": "20",
    "checkConnectionWhileIdle": "true",
    "checkConnectionOnBorrow": "true",
    "defaultTransactionIsolation": "READ_COMMITTED",
    "properties": { "hibernate.dialect": "org.hibernate.dialect.MySQL57Dialect",
      "hibernate.dialect.storage_engine": "innodb",
      "hibernate.show_sql": false }
  },

  "server": {
    "type": "simple",
    "registerDefaultExceptionMappers": false,
    "connector": {
        "type": "http",
        "port": 8080,
        "bindHost": null
    },
    "applicationContextPath": "/",
    "adminContextPath": "/admin",
    "requestLog": {
        "appenders": [
            {
                "type": "file",
                "currentLogFilename": "/var/log/platform-server/request.log",
                "threshold": "ALL",
                "archive": false,
                "timeZone": "UTC"
            }
        ]
    }
  },

  "logging": { "level": "INFO",
    "loggers": { "com.sun.jersey.api.container.filter.LoggingFilter": "INFO",
                 "org.hibernate.engine.internal.StatisticalLoggingSessionEventListener": "WARN" } }
}
