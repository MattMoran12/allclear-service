{
  "env": "test",

  "baseUrl": "${baseUrl:-https://app-test.allclear.app}",
  "registrationPhone": "+16466321488",
  "authPhone": "+16466321488",

  "admins": "DefaultEndpointsProtocol=https;AccountName=allclear-admins;AccountKey=${COSMOS_ACCOUNT_KEY:-accountKey};TableEndpoint=https://allclear-admins.table.cosmos.azure.com:443/;",
  "queue": "${QUEUE_CONNECTION_STRING:-queueConnectionString}",
  "session": { "test": true },
  "twilio": { "baseUrl": "${twilio.baseUrl:-https://api.twilio.com/2010-04-01}", "accountId": "${twilio.accountId:-123}", "authToken": "${twilio.authToken:-token}" },
 
  "trans": {
    "driverClass": "org.h2.Driver",
    "url": "jdbc:h2:mem:test;DB_CLOSE_DELAY=-1",
    "maxWaitForConnection": "1s",
    "validationQuery": "SELECT 1",
    "validationQueryTimeout": "10s",
    "minSize": "1",
    "maxSize": "10",
    "checkConnectionWhileIdle": "false",
    "defaultTransactionIsolation": "READ_COMMITTED",
    "properties": { "hibernate.dialect": "org.hibernate.dialect.H2Dialect",
      "hibernate.show_sql": false }
  },

  "server": {
    "type": "simple",
    "registerDefaultExceptionMappers": false,
    "connector": {
        "type": "http",
        "port": 8080,
        "bindHost": null
    },
    "applicationContextPath": "/",
    "adminContextPath": "/internals",
    "requestLog": {
        "appenders": [
            {
                "type": "console",
                "threshold": "ALL",
                "timeZone": "UTC"
            }
        ]
    }
  },

  "logging": { "level": "INFO",
    "loggers": { "com.sun.jersey.api.container.filter.LoggingFilter": "INFO",
                 "org.hibernate.engine.internal.StatisticalLoggingSessionEventListener": "WARN" } }
}
